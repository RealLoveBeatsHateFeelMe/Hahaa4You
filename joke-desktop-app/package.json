{
  "name": "joke-desktop-app",
  "version": "1.0.0",
  "description": "Hahha4You - A fun desktop joke app with floating ball",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "electron": "^40.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.hahha4you.jokeapp",
    "productName": "Hahha4You",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.1.3"
  }
}
